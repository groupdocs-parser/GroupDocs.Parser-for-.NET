<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="CommonMarginValue">5.0</system:Double>
    <system:Double x:Key="CommonFontSizeValue">18</system:Double>

    <Thickness x:Key="CommonMargin"
               Left="{StaticResource CommonMarginValue}"
               Top="{StaticResource CommonMarginValue}"
               Right="{StaticResource CommonMarginValue}"
               Bottom="{StaticResource CommonMarginValue}" />

    <Style TargetType="{x:Type Label}"
           x:Key="{x:Type Label}">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="FontSize"
                Value="{StaticResource CommonFontSizeValue}" />
        <Setter Property="Padding"
                Value="5,0" />
        <Setter Property="Background"
                Value="#FAFBFE" />
        <Setter Property="MinHeight"
                Value="44" />
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    ShadowDepth="{StaticResource CommonMarginValue}"
                    RenderingBias="Performance"
                    Opacity="100"
                    Direction="315"
                    Color="#D3D5DE"
                    BlurRadius="{StaticResource CommonMarginValue}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Label">
                    <Border
                        CornerRadius="6" 
                        Background="#FAFBFE"
                        BorderThickness="0" >
                        <ContentPresenter
                            x:Name="contentPresenter" 
                            ContentTemplate="{TemplateBinding ContentTemplate}" 
                            Content="{TemplateBinding Content}" 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Margin="{TemplateBinding Padding}" 
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TextBox}"
           x:Key="{x:Type TextBox}">
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
    </Style>

    <Style TargetType="{x:Type CheckBox}"
           x:Key="{x:Type CheckBox}">
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
    </Style>

    <Style TargetType="{x:Type Button}"
           x:Key="{x:Type Button}">
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="FontSize"
                Value="{StaticResource CommonFontSizeValue}" />
        <Setter Property="Background"
                Value="#FAFBFE" />
        <Setter Property="Padding"
                Value="15,0" />
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
        <Setter Property="MinWidth"
                Value="80" />
        <Setter Property="MinHeight"
                Value="44" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    ShadowDepth="{StaticResource CommonMarginValue}"
                    RenderingBias="Performance"
                    Opacity="100"
                    Direction="315"
                    Color="#D3D5DE"
                    BlurRadius="{StaticResource CommonMarginValue}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        CornerRadius="6" 
                        Background="#FAFBFE"
                        BorderThickness="0" >
                        <ContentPresenter
                            x:Name="contentPresenter" 
                            ContentTemplate="{TemplateBinding ContentTemplate}" 
                            Content="{TemplateBinding Content}" 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Margin="{TemplateBinding Padding}" 
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}"
           x:Key="SquareButtonStyle">
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="FontSize"
                Value="{StaticResource CommonFontSizeValue}" />
        <Setter Property="Background"
                Value="#FAFBFE" />
        <Setter Property="Padding"
                Value="0,-5,0,0" />
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
        <Setter Property="MinWidth"
                Value="44" />
        <Setter Property="MinHeight"
                Value="44" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    ShadowDepth="{StaticResource CommonMarginValue}"
                    RenderingBias="Performance"
                    Opacity="100"
                    Direction="315"
                    Color="#D3D5DE"
                    BlurRadius="{StaticResource CommonMarginValue}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        CornerRadius="6" 
                        Background="#FAFBFE"
                        BorderThickness="0" >
                        <ContentPresenter
                            x:Name="contentPresenter" 
                            ContentTemplate="{TemplateBinding ContentTemplate}" 
                            Content="{TemplateBinding Content}" 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Margin="{TemplateBinding Padding}" 
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ListBox}"
           x:Key="{x:Type ListBox}">
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
    </Style>

    <Style TargetType="{x:Type ListView}"
           x:Key="{x:Type ListView}">
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
    </Style>

    <Style TargetType="{x:Type ComboBox}"
           x:Key="{x:Type ComboBox}">
        <Setter Property="Margin"
                Value="{StaticResource CommonMargin}" />
        <Setter Property="MinHeight"
                Value="22" />
    </Style>
</ResourceDictionary>
